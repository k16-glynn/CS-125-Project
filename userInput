#include "stdio.h"


char userInput()
{
  char letter;
  
  while (letter < 'A' || letter > 'Z' ){
    printf("Upper Case letter: ");
    scanf(" %c", &letter);
    
    if  (letter < 'A' || letter > 'Z'  ){
      printf("Invalid, try again: \n ");
      scanf(" %*s");
      scanf("%c", &letter);
    }
  }
return letter;
}





int main() 
{
  printf("%c", userInput());
  return 0;
}


